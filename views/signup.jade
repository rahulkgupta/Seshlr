                                input(type='text', id='dept-search-input', data-provide='typeahead', data-source='[#{depts}]')
                
                        #course-search
                            h3 Course:
                                input(type='text', id='course-search-input')
                            
                        a#course-submit.btn.btn-primary(href='#') Add Course
    footer
      p Pekt Labs