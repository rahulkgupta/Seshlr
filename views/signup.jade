append head
        script(data-main="/javascripts/main", src='/javascripts/libs/require/require-jquery.js')

.container
   .row
        .logo-box   
            h1.biglogo Seshlr
        .signup-container
            #signup-guide
                .span3
                    h3 Get started with Seshlr
                    ul.tasks
                        li 
                            h5 1
                            p Add your courses
            #signup-content 
                .span9#main-container
                    #alert-container
                        .alert.hide.sign-up-alert
                    #course-selector
